<p id="notice"><%= notice %></p>

<h1>Departments</h1>

<%= search_form_for @q do |f| %>
  <%= f.label :name, "Department" %>
  <%= f.search_field :name_cont %>

  <%= f.label :location, "Location" %>
  <%= f.select :location_eq, [['東京', 0], ['深圳', 1], ['バンコク', 2], ['デュッセルドルフ', 3], ['ダラス', 4]], {include_blank: '選択なし'} %>

  <%= f.submit "検索" %>
<% end %>

<table border="0" CELLPADDING=5 CELLSPACING=2 style='border-collapse: separate; border-spacing: 5px;' >
  <thead>
    <tr>
      <th>Name</th>
      <th>Location</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @departments.each do |department| %>
      <tr>
        <td><%= department.name %></td>
        <td><%= department.location %></td>
        <td><%= department.description %></td>
        <td><%= link_to 'Show', department %></td>
        <td><%= link_to 'Edit', edit_department_path(department) %></td>
        <td><%= link_to 'Destroy', department, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Department', new_department_path %>
