<p id="notice"><%= notice %></p>

<h1>Reviews</h1>

<%= search_form_for @q do |f| %>
  <%= f.label :stage, "Stage" %>
  <%= f.select :stage_eq, [['Review 1', 0], ['Review 2', 1], ['Review 3', 2]], {include_blank: '選択なし'} %>

  <%= f.label :judge, "Judge" %>
  <%= f.select :judge_eq, [['pass', true], ['not passed', false]], {include_blank: '選択なし'} %>

  <%= f.submit "検索" %>
<% end %>

<table border="0" CELLPADDING=5 CELLSPACING=2 style='border-collapse: separate; border-spacing: 5px;' >
  <thead>
    <tr>
      <th>Requester</th>
      <th>Stage</th>
      <th>Description</th>
      <th>Former review</th>
      <th>Date on</th>
      <th>Deadline</th>
      <th>Judge</th>
      <th>Comment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reviews.each do |review| %>
      <tr>
        <td><%= review.requester %></td>
        <td><%= review.stage %></td>
        <td><%= review.description %></td>
        <td><%= review.former_review %></td>
        <td><%= review.date_on %></td>
        <td><%= review.deadline %></td>
        <td><%= review.judge %></td>
        <td><%= review.comment %></td>
        <td><%= link_to 'Show', review %></td>
        <td><%= link_to 'Edit', edit_review_path(review) %></td>
        <td><%= link_to 'Destroy', review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Review', new_review_path %>
